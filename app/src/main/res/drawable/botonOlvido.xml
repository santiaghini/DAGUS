<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="60dp"
            />
            <solid
                android:color="@color/pressedOlvido"
            />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
            />
            <size
                android:width="100dp"
                android:height="16dp"
            />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="60dp"
            />
            <solid
                android:color="@android:color/transparent"
            />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
            />
            <size
                android:width="100dp"
                android:height="16dp"
            />
        </shape>
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="60dp"
            />
            <solid
                android:color="@android:color/transparent"
            />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
            />
            <size
                android:width="100dp"
                android:height="16dp"
            />
        </shape>
    </item>
</selector>